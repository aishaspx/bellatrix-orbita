{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        },
        {
            "src": "style.css",
            "use": "@vercel/static"
        },
        {
            "src": "*.js",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "^/api/(.*)$",
            "dest": "backend/main.py"
        },
        {
            "src": "^/style\\.css$",
            "dest": "/style.css"
        },
        {
            "src": "^/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))$",
            "dest": "/$1"
        },
        {
            "src": "^/(.*)$",
            "dest": "/index.html"
        }
    ]
}