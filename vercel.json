{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/main.py"
        },
        {
            "src": "/style.css",
            "dest": "frontend/style.css"
        },
        {
            "src": "/app.js",
            "dest": "frontend/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}